# wpa_supplicant build configuration - WEXT-only (zero dependencies)
# Perfect for rtl8188eu which only supports WEXT
# Requires ONLY the cross-compiler - no ARM64 system libraries!

# Driver support - WEXT ONLY (no nl80211 = no libnl dependency)
CONFIG_DRIVER_WEXT=y
# CONFIG_DRIVER_NL80211 is not set

# Use internal TLS/crypto implementation (no OpenSSL needed!)
CONFIG_TLS=internal
CONFIG_INTERNAL_LIBTOMMATH=y
CONFIG_INTERNAL_LIBTOMMATH_FAST=y

# Basic crypto support (all internal)
CONFIG_INTERNAL_AES=y
CONFIG_INTERNAL_SHA1=y
CONFIG_INTERNAL_SHA256=y
CONFIG_INTERNAL_SHA384=y
CONFIG_INTERNAL_SHA512=y
CONFIG_INTERNAL_MD5=y
CONFIG_INTERNAL_RC4=y
CONFIG_INTERNAL_DH_GROUP5=y

# WPA/WPA2 support
CONFIG_IEEE8021X_EAPOL=y
CONFIG_EAP=y
CONFIG_EAP_MD5=y
CONFIG_EAP_TLS=y
CONFIG_EAP_MSCHAPV2=y
CONFIG_EAP_PEAP=y
CONFIG_EAP_TTLS=y
CONFIG_EAP_GTC=y
CONFIG_EAP_OTP=y
CONFIG_EAP_LEAP=y
CONFIG_EAP_PSK=y
CONFIG_EAP_PAX=y
CONFIG_EAP_SAKE=y
CONFIG_EAP_GPSK=y
CONFIG_EAP_GPSK_SHA256=y

# WPA3/SAE support - DISABLED (requires elliptic curve crypto not in internal libtommath)
# CONFIG_SAE is not set
# CONFIG_SAE_PK is not set

# Core features
CONFIG_BACKEND=file
CONFIG_CTRL_IFACE=y
CONFIG_CTRL_IFACE_UNIX=y

# Disable features that need nl80211
# CONFIG_AP is not set
# CONFIG_P2P is not set
# CONFIG_MESH is not set

# WPS support (works with WEXT)
CONFIG_WPS=y

# Fast reauth
CONFIG_PEERKEY=y

# Management frame protection
CONFIG_IEEE80211W=y

# Disable features requiring modern nl80211
# CONFIG_HS20 is not set
# CONFIG_INTERWORKING is not set
# CONFIG_TDLS is not set
# CONFIG_WIFI_DISPLAY is not set

# Privilege separation is not needed for embedded use
# CONFIG_PRIVSEP is not set

# Smaller binary
CONFIG_NO_STDOUT_DEBUG=y

# Disable DBus (not needed, requires system libraries)
# CONFIG_CTRL_IFACE_DBUS is not set
# CONFIG_CTRL_IFACE_DBUS_NEW is not set
# CONFIG_CTRL_IFACE_DBUS_INTRO is not set
