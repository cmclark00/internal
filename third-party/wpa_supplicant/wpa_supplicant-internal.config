# wpa_supplicant build configuration - Internal crypto (no external dependencies)
# This config uses wpa_supplicant's built-in crypto instead of OpenSSL
# Perfect for cross-compilation when ARM64 libraries aren't available

# Driver support - CRITICAL for rtl8188eu compatibility
CONFIG_DRIVER_NL80211=y
CONFIG_DRIVER_WEXT=y

# Use internal TLS/crypto implementation (no OpenSSL needed!)
CONFIG_TLS=internal
CONFIG_INTERNAL_LIBTOMMATH=y
CONFIG_INTERNAL_LIBTOMMATH_FAST=y

# Basic crypto support (all internal)
CONFIG_INTERNAL_AES=y
CONFIG_INTERNAL_SHA1=y
CONFIG_INTERNAL_SHA256=y
CONFIG_INTERNAL_SHA384=y
CONFIG_INTERNAL_SHA512=y
CONFIG_INTERNAL_MD5=y
CONFIG_INTERNAL_RC4=y
CONFIG_INTERNAL_DH_GROUP5=y

# WPA/WPA2 support
CONFIG_IEEE8021X_EAPOL=y
CONFIG_EAP=y
CONFIG_EAP_MD5=y
CONFIG_EAP_TLS=y
CONFIG_EAP_MSCHAPV2=y
CONFIG_EAP_PEAP=y
CONFIG_EAP_TTLS=y
CONFIG_EAP_GTC=y
CONFIG_EAP_OTP=y
CONFIG_EAP_LEAP=y
CONFIG_EAP_PSK=y
CONFIG_EAP_PAX=y
CONFIG_EAP_SAKE=y
CONFIG_EAP_GPSK=y
CONFIG_EAP_GPSK_SHA256=y

# WPA3/SAE support
CONFIG_SAE=y
CONFIG_SAE_PK=y

# Core features
CONFIG_BACKEND=file
CONFIG_CTRL_IFACE=y
CONFIG_CTRL_IFACE_UNIX=y

# Remove unnecessary features to reduce size
# CONFIG_DEBUG_FILE is not set
# CONFIG_DEBUG_SYSLOG is not set
CONFIG_WPS=y
CONFIG_AP=y
CONFIG_P2P=y
CONFIG_MESH=y

# Fast reauth
CONFIG_PEERKEY=y

# Management frame protection
CONFIG_IEEE80211W=y

# Hotspot 2.0
CONFIG_HS20=y
CONFIG_INTERWORKING=y

# TDLS support
CONFIG_TDLS=y

# Wi-Fi Direct
CONFIG_WIFI_DISPLAY=y

# Privilege separation is not needed for embedded use
# CONFIG_PRIVSEP is not set

# Smaller binary
CONFIG_NO_STDOUT_DEBUG=y
